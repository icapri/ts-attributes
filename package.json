{
  "name": "ts-attributes",
  "version": "1.0.7",
  "description": "Provides auxiliary typescript decorators.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "publish": "npm version 1.0.7 && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-kapri/ts-attributes.git"
  },
  "keywords": [
    "TypeScript",
    "Decorators"
  ],
  "author": "I. Kapri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-kapri/ts-attributes/issues"
  },
  "homepage": "https://github.com/i-kapri/ts-attributes#readme",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.4"
  },
  "files": [
    "lib/**/*"
  ]
}
